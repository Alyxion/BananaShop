{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "BananaStore FastAPI (hot reload :8070)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8070",
        "--reload",
        "--reload-dir",
        "app",
        "--reload-dir",
        "static",
        "--reload-include",
        "*.py",
        "--reload-include",
        "*.js",
        "--reload-include",
        "*.css",
        "--reload-include",
        "*.html"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
